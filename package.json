{
  "name": "playwright-helper",
  "displayName": "3CAT Helper",
  "description": "VS Code Extension to run Playwright tests and snippets",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.88.0"
  },
  "icon": "icon.png",
  "categories": ["Other"],
  "main": "./out/extension.js",

  "activationEvents": [
    "onCommand:playwright-helper.runCurrentFile",
    "onCommand:playwright-helper.runCurrentFileWithOptions",
    "onCommand:playwright-helper.showReport",
    "onCommand:playwright-helper.recordAndInsert"
  ],

  "scripts": {
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/vscode": "^1.88.0",
    "typescript": "^5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/klongkhwan/tools3cat.git"
  },

  "contributes": {
    "commands": [
      { "command": "playwright-helper.runCurrentFile", "title": "Run Playwright Test" },
      { "command": "playwright-helper.runCurrentFileWithOptions", "title": "Run Playwright Test (with options)" },
      { "command": "playwright-helper.showReport", "title": "Show Playwright Test Report" },

      { "command": "playwright-helper.recordAndInsert", "title": "Playwright: Record code" }
    ],

    "menus": {
      "explorer/context": [
        {
          "command": "playwright-helper.runCurrentFile",
          "when": "resourceFilename =~ /\\.(test|spec)\\.(ts|js)$/",
          "group": "navigation@100"
        },
        {
          "command": "playwright-helper.runCurrentFileWithOptions",
          "when": "resourceFilename =~ /\\.(test|spec)\\.(ts|js)$/",
          "group": "navigation@101"
        },
        {
          "command": "playwright-helper.recordAndInsert",
          "when": "resourceFilename =~ /\\.(test|spec)\\.(ts|js)$/",
          "group": "navigation@102"
        }
      ],
      "editor/context": [
        {
          "command": "playwright-helper.runCurrentFile",
          "when": "resourceExtname =~ /\\.(ts|js)$/",
          "group": "navigation@100"
        },
        {
          "command": "playwright-helper.recordAndInsert",
          "when": "resourceFilename =~ /\\.(test|spec)\\.(ts|js)$/",
          "group": "navigation@101"
        }
      ],
      "commandPalette": [
        { "command": "playwright-helper.runCurrentFile" },
        { "command": "playwright-helper.showReport" },
        { "command": "playwright-helper.recordAndInsert" }
      ]
    },

    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/playwright.code-snippets"
      }
    ]
  }
}
